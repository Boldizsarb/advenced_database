<!DOCTYPE html>
<html lang="en">
   
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    

</head>
<body>
    <div id="header">
        <%- include('common/header'); -%> 
    </div>

    <h2 class="categoryh2"><%= cards[0].category %> :</h2>

    <div class="card-container">
        <% cards.forEach(card => { %>
            <div class="card">
                <div class="card-front">
                    <%= card.front %>
                </div>
                <div class="card-back">
                    <%= card.back %>
                </div>
                <div class="cardId" >
                    <%= card.category %>
                </div>
                <div class="cardId" >
                    <%= card.id %>
                </div>
                <div class="card-buttons">
                    <a href="/usersCards/update/<%= card.id%>" class="more-button">Edit</a>
                    <a href="/usersCards/delete/<%= card.id %>" class="delete-button">Delete</a>
                </div>
            </div>
        <%  }); %>
    </div>
    --------------------------------------------------------------
    
</body>
</html>
<script>

const cards1 = document.querySelectorAll('.card');

cards1.forEach(card => {
    card.addEventListener('click', function() {
        card.classList.toggle('flipped');
    });
});

</script>
<style>
    .categoryh2{
        color: white;
        text-align: center;
    }
    .card-container{
    padding-top: 20vh;
}

body{
    color: black;
}
.card-container {
display: flex;
flex-wrap: wrap;
justify-content: center;
}
.cardId{     /* othervise it is ugly!*/
    display: none;
}

.card {
width: 300px;
height: 200px;
margin: 10px;
background-color: white;
box-shadow: 0px 0px 10px #ccc;
border-radius: 10px;
overflow: hidden;
position: relative;
transition: all 0.3s ease-in-out;
transform-style: preserve-3d;
}

.card:hover {
transform: rotateY(5deg) scale(1.05);
box-shadow: 0px 0px 15px #ccc;
cursor: pointer;
overflow: auto;
}

.card-front, .card-back {
width: 100%;
height: 100%;
position: absolute;
top: 0;
left: 0;
padding: 20px;
box-sizing: border-box;
transition: all 0.3s ease-in-out;
backface-visibility: hidden;
}

.card-back {
background-color: #f2f2f2;
transform: rotateY(180deg);
}

.card.flipped .card-front {
transform: rotateY(180deg);
}

.card.flipped .card-back {
transform: rotateY(360deg);
}
.card-buttons {
position: absolute;
right: 10px;
top: 10px;
display: flex;
visibility: hidden;
z-index: 2;

}
.more-button, .delete-button {
background-color: black;
color: white;
padding: 5px 10px;
margin-left: 5px;
text-decoration: none;
cursor: pointer;
transition: all 0.3s ease-in-out;
border-radius: 50%;
}
.card:hover .card-buttons {
visibility: visible;
}
.delete-button:hover {
color: orange;
}
.more-button:hover{
color: lightblue;
}
</style>