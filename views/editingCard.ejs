<style>
    h1{
        color: white;
    }
body {
    background-color: #322B2B;
    color: white;
}

.arrow {
    position: fixed;
    top: 10px;
    left: 50%;
    transform: translateX(-50%);
    transform: rotate(90deg);
    cursor: pointer;
    padding: 2vh;
}

.arrow span {
    display: block;
    width: 1.5vw;
    height: 1.5vw;
    border-bottom: 5px solid white;
    border-right: 5px solid white;
    transform: rotate(45deg);
    margin: -10px;
    animation: animate 2s infinite;
}

.arrow span:nth-child(2) {
    animation-delay: -0.2s;
}

.arrow span:nth-child(3) {
    animation-delay: -0.4s;
}

@keyframes animate {
    0% {
        opacity: 0;
        transform: rotate(45deg) translate(-20px, -20px);
    }
    50% {
        opacity: 1;
    }
    100% {
        opacity: 0;
        transform: rotate(45deg) translate(20px, 20px);
    }
}

    body{
        background-color: black;
    }
    form {
    width: 90%;
    max-width: 600px;
    margin: 0 auto;
    padding: 20px;
    background-color: rgba(0, 0, 0, 0.8); /* change to a transparent black */
    border: 1px solid #ccc;
    border-radius: 5px;
    box-shadow: 0px 0px 10px #ccc;
    /* Add glassy effect */
    background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.6)); /* change to a transparent black */
    background-size: 100% 200%;
    background-position: top;
    transition: background-position 0.2s ease-in-out;
}
form:hover {
    background-position: bottom;
}

/* Label styles */
label {
    font-size: 1.2rem;
    font-weight: bold;
    color: white;
    margin-bottom: 10px;
    display: block;
}

/* Input field styles */
input[type="text"] {
    width: 100%;
    padding: 16px 24px;
    margin-bottom: 20px;
    box-sizing: border-box;
    border: 1px solid #ccc;
    border-radius: 5px;
    background-color: #444;
    color: white;
    font-size: 1.2rem;
    /* Add glassy effect */
    background-image: linear-gradient(to bottom, #444, #555);
    background-size: 100% 200%;
    background-position: top;
    transition: background-position 0.2s ease-in-out;
}
input[type="text"]:hover {
    background-position: bottom;
}

/* Submit button styles */
button {
    background-color: #ffa600; /* change to orange color */
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    font-size: 1.2rem;
    font-weight: bold;
    cursor: pointer;
    float: right;
    box-shadow: 0px 0px 10px #ccc; /* Add a subtle shadow */
    transition: all 0.2s ease-in-out; 
}

button[type="submit"]:hover {
    background-color: #ff9100; /* change to darker orange color */
    transform: scale(1.1); /* Increase size of button on hover */
    box-shadow: 0px 0px 15px #ccc;
}
</style>